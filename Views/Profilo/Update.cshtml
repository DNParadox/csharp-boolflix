@{
    ViewData["Title"] = "Modifica profilo";
}


@model Profilo



<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex align-items-center">
                <h1 class="mt-3 mb-3">Nuovo Profilo</h1>
            </div>
            <form asp-controller="Profilo" asp-action="Update"  asp-route-id="@Model.Id" method="post">

              
                <div class="mb-3">
                    <label asp-for="Name">Modifica Nome profilo: </label>
                    <input asp-for="Name" class="d-block w-100" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
             


                <div class="text-end">
                    <input type="submit" class="btn btn-small btn-success" value="Salva">
                </div>

            </form>
        </div>
    </div>
</div>